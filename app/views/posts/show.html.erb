<p id="notice">
	<%= notice %>
</p>
<p>
	<b>Name:</b>
	<%= @post.name %>
</p>
<p>
	<b>Title:</b>
	<%= @post.title %>
</p>
<p>
	<b>Content:</b>
	<%= @post.content %>
</p>
<p>
	<b>Tags:</b>
	<%= join_tags(@post) %>
	<br/>
	<%unless @tag_counts.nil?%>
	<% @tag_counts.each do |tag_name, tag_count| %>
	<tr>
		<td><%= link_to(tag_name, posts_path(:name => tag_name)) %></td>
		<td>(<%= tag_count%>)</td>
	</tr>
	<% end %>
	<%end%>
</p>
<h2>Comments</h2>
<%= render @post.comments %> <h2>Add a comment:</h2>
<%= render "comments/form" %>

<%= link_to 'Edit Post', edit_post_path(@post) %> |
<%= link_to 'Back to Posts', posts_path %> |